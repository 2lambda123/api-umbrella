# Ignore Vagrant config
/.vagrant

# Local chef/knife configuration.
/chef/.chef

# Custom root certificates that need to be installed for HTTPS. Only used
# inside NREL's network, so ignore from git.
/chef/data_bags/ca_certificates

# Ignore real databags.
/chef/data_bags/envs/staging.json
/chef/data_bags/envs/production.json

# Ignore bundler config
/website/.bundle

# Ignore the build directory
/website/build

# Ignore Sass' cache
/website/.sass-cache

# Ignore .DS_store file
.DS_Store

# Ignore Shippable items, so the GitHub pages publish task can work. 
/shippable
/shippable_script
/run_install
/run_script
/Build*.tar.gz
