# Webkit-based driver for capybara
gem "poltergeist", "~> 1.18.1"

# Take screenshots on capybara test failures
gem "capybara-screenshot", "~> 1.0.14"

# HTML or XML parsing
gem "nokogiri", "~> 1.8.1"

# Useful additions
