#!/usr/bin/env bash

trafficserver_version="7.1.5"
trafficserver_hash="fa27890f78bb1e5d904f81abb13a9527579fef9f5ccd9f4ca680599a38c4ff6987034bf5f78fe965648150a6e84754479750347e445d3caff38d00141e6422f2"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "http://apache.mirrors.pair.com/trafficserver/trafficserver-$trafficserver_version.tar.bz2" "sha512" "$trafficserver_hash"
extract_download "trafficserver-$trafficserver_version.tar.bz2"

cd "trafficserver-$trafficserver_version"
SPHINXBUILD=false ./configure \
  --prefix="$INSTALL_PREFIX_EMBEDDED" \
  --enable-experimental-plugins
make -j"$NPROC"
make install DESTDIR="$STAGE_DIR"
chrpath -d "$STAGE_EMBEDDED_DIR/lib/libtsmgmt.so"
find "$STAGE_EMBEDDED_DIR/libexec/trafficserver/" -name "*.so" -exec chrpath -d {} \;
find "$STAGE_EMBEDDED_DIR/bin/" -name "traffic_*" -exec chrpath -d {} \;

stamp
