#!/usr/bin/env bash

haproxy_dataplaneapi_version="2.4.1"
haproxy_dataplaneapi_hash="79152cdbc22b6827bb53c4eddd17d1e4"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://github.com/haproxytech/dataplaneapi/releases/download/v${haproxy_dataplaneapi_version}/dataplaneapi_${haproxy_dataplaneapi_version}_Linux_x86_64.tar.gz" "md5" "$haproxy_dataplaneapi_hash"
extract_download "dataplaneapi_${haproxy_dataplaneapi_version}_Linux_x86_64.tar.gz"

install -D -m 755 "build/dataplaneapi" "$STAGE_EMBEDDED_DIR/bin/dataplaneapi"

stamp
