#!/usr/bin/env bash

public_suffix_list_version="cf4eef62e8045d6cca30ecfd781f6a7fe386e553"
public_suffix_list_hash="407148b3cf2769ec00797a04dff129ce"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://raw.githubusercontent.com/publicsuffix/list/$public_suffix_list_version/public_suffix_list.dat" "md5" "$public_suffix_list_hash"

install -D -m 644 ./_persist/downloads/public_suffix_list.dat "$STAGE_EMBEDDED_DIR/var/db/public_suffix_list.dat"

stamp
