#!/usr/bin/env bash

ruby_version="2.6.3"
ruby_hash="dd638bf42059182c1d04af0d5577131d4ce70b79105231c4cc0a60de77b14f2e"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://cache.ruby-lang.org/pub/ruby/2.6/ruby-$ruby_version.tar.bz2" "sha256" "$ruby_hash"
extract_download "ruby-$ruby_version.tar.bz2"

cd "ruby-$ruby_version"
./configure \
  --prefix="$DEV_INSTALL_PREFIX" \
  --enable-load-relative \
  --disable-rpath \
  --disable-install-doc
make -j"$NPROC"
make install

stamp
