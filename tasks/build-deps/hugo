#!/usr/bin/env bash

hugo_version="0.88.1"
hugo_hash="51850899dcd76f71c76004b9be28c7c1ea1b645d7227ff79534f773acd5e88fe"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://github.com/gohugoio/hugo/releases/download/v${hugo_version}/hugo_extended_${hugo_version}_Linux-64bit.tar.gz" "sha256" "$hugo_hash"
extract_download "hugo_extended_${hugo_version}_Linux-64bit.tar.gz"

install -D -m 755 "hugo" "$DEV_INSTALL_PREFIX/bin/hugo"

stamp
