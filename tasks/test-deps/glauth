#!/usr/bin/env bash

glauth_version="2.1.0"
glauth_hash="4432260e6468644f99bfa61cc8a9586439823aada05a5602e7aacda765fd320d"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://github.com/glauth/glauth/releases/download/v$glauth_version/linuxamd64.zip" "sha256" "$glauth_hash"
rm -rf _persist/downloads/linuxamd64
unzip "_persist/downloads/linuxamd64.zip" -d _persist/downloads/linuxamd64

install -D -m 755 _persist/downloads/linuxamd64/glauth "$TEST_INSTALL_PREFIX/bin/glauth"

stamp
