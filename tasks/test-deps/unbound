#!/usr/bin/env bash

unbound_version="1.13.1"
unbound_hash="8504d97b8fc5bd897345c95d116e0ee0ddf8c8ff99590ab2b4bd13278c9f50b8"

set -e -u -x
source ./tasks/helpers.sh

task_working_dir
download "https://nlnetlabs.nl/downloads/unbound/unbound-$unbound_version.tar.gz" "sha256" "$unbound_hash"
extract_download "unbound-$unbound_version.tar.gz"

cd "unbound-$unbound_version"
./configure --prefix="$TEST_INSTALL_PREFIX"
make -j"$NPROC"
make install

stamp
