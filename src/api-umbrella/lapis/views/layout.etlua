<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>API Umbrella Admin</title>
    <meta content="width=device-width,initial-scale=1" name="viewport">
    <link rel="stylesheet" media="screen" href="/admin/auth-assets/<%= LOGIN_CSS_FILENAME %>" />
  </head>
  <body>
    <div class="login">
      <% if flash and next(flash) ~= nil then %>
        <% for flash_type, message in pairs(flash) do %>
          <div class="alert alert-<%= flash_type %>">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <% content_for("inner") %>
    </div>
  </body>
</html>
