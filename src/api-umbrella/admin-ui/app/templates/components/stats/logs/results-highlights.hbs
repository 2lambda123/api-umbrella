<div class="row number-highlights">
  <div class="col-sm-3 number-highlight">
    <strong>{{format-number stats.total_hits format="0,0"}}</strong>
    <small>{{inflect "hit" stats.total_hits}}</small>
  </div>
  <div class="col-sm-3 number-highlight">
    <strong>{{format-number stats.total_users format="0,0"}}</strong>
    <small>unique {{inflect "user" stats.total_users}}</small>

    {{! view 'stats/facet-table'
       data=model.aggregations.users
       facetTerm='user_email'
       toggleLabel='view top users'}}
  </div>
  <div class="col-sm-3 number-highlight">
    <strong>{{format-number stats.total_ips format="0,0"}}</strong>
    <small>unique ip {{inflect "address" stats.total_ips}}</small>

    {{! view 'stats/facet-table'
       data=model.aggregations.ips
       facetTerm='request_ip'
       toggleLabel='view top ips'}}
  </div>
  <div class="col-sm-3 number-highlight">
    <strong>{{format-number stats.average_response_time format="0,0"}} <span class="units">ms</span></strong>
    <small>average response time</small>
  </div>
</div>
