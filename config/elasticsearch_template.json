{
  "template": "api-umbrella-logs-*",
  "settings": {
    "index": {
      "number_of_shards": 1
    },
    "analysis": {
      "analyzer": {
        "keyword_lowercase": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        },
        "path_hierarchy_lowercase": {
          "type": "custom",
          "tokenizer": "path_hierarchy",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings": {
    "log": {
      "_all": {
        "enabled": false
      },
      "_timestamp": {
        "enabled": true,
        "path": "request_at"
      },
      "dynamic_templates": [
        {
          "string_template": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "string",
              "index": "analyzed",
              "analyzer": "keyword_lowercase"
            }
          }
        }
      ],
      "properties": {
        "api_key": {
          "type": "string",
          "index": "not_analyzed"
        },
        "user_id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "request_path": {
          "type": "string",
          "analyzer": "path_hierarchy_lowercase"
        },
        "response_status": {
          "type": "short"
        },
        "request_ip_location": {
          "type": "geo_point",
          "lat_lon": true
        }
      }
    }
  }
}
