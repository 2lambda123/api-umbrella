backend api_broadbandmap_farm
  # Strip /api/fcc from the beginning of the request URL before the receiving
  # backend application sees the request.
  #
  # Turns a request from "GET /api/fcc/something" to "GET /something"
  reqirep ^([^\ ]*)\ /api/fcc(/.*) \1\ \2

  # Modify the host.
  reqirep ^Host: Host:\ broadbandmap.gov

  balance roundrobin
  server api_broadbandmap1 broadbandmap.gov:80
