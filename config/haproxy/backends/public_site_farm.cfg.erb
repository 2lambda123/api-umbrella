# Public Site Backend
#
# The public site that provides the frontend for API registration and
# documentation.
backend public_site_farm-<%= deploy_name %>
  balance roundrobin
  <% server_registory[:public_site].each_with_index do |server, i| %>
  <%= "server public_site#{i}-#{deploy_name} #{server[:host]}:#{server[:port]}" %>
  <% end %>
