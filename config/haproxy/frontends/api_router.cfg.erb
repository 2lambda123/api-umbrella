frontend api_router 127.0.0.1:50100
  option http-server-close
  option forwardfor

  # developer.nrel.gov - The public facing developer.nrel.gov site has services
  # of its own for things like account signup.
  acl url_match_api_developer_site path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_developer_site.lst") %>
  use_backend developer_site_farm if url_match_api_developer_site

  # Technology Deployment Tools Group Services
  acl url_match_api_tdt path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_tdt.lst") %>
  use_backend api_tdt_farm if url_match_api_tdt

  # Sustainable Fuels & Vehicles Services
  acl url_match_api_sfv path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_sfv.lst") %>
  use_backend api_sfv_farm if url_match_api_sfv

  # georeserv Services
  acl url_match_api_georeserv path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_georeserv.lst") %>
  use_backend api_georeserv_farm if url_match_api_georeserv

  # FleetAtlas Services
  acl url_match_api_fleet_atlas path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_fleet_atlas.lst") %>
  use_backend api_fleet_atlas_farm if url_match_api_fleet_atlas

  # Transportation Services
  acl url_match_api_transportation path_beg -i -f <%= File.join(latest_release, "config/haproxy/api_router_matches/api_transportation.lst") %>
  use_backend api_transportation_farm if url_match_api_transportation
