server {
  listen 51000;
  server_name <%= domain %>;

  root <%= current_path %>/public;

  access_log <%= shared_path %>/log/access.log combined;
  error_log <%= shared_path %>/log/error.log;

  # Serve this rails site with Passenger.
  passenger_enabled on;
  passenger_base_uri /;

  # Set the current environment.
  rails_env <%= rails_env %>;
}

<% if(rails_env == "production") %>
# Pre-start the rails app.
passenger_pre_start http://<%= domain %>:51000/;
<% end %>
