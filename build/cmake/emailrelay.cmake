list(APPEND EMAILRELAY_CONFIGURE_CMD env)
list(APPEND EMAILRELAY_CONFIGURE_CMD <SOURCE_DIR>/configure)
list(APPEND EMAILRELAY_CONFIGURE_CMD --prefix=${INSTALL_PREFIX_EMBEDDED})
list(APPEND EMAILRELAY_CONFIGURE_CMD --disable-gui)
list(APPEND EMAILRELAY_CONFIGURE_CMD --disable-exec)
list(APPEND EMAILRELAY_CONFIGURE_CMD --disable-identity)
list(APPEND EMAILRELAY_CONFIGURE_CMD --disable-pop)

ExternalProject_Add(
  emailrelay
  URL https://downloads.sourceforge.net/project/emailrelay/emailrelay/${EMAILRELAY_VERSION}/emailrelay-${EMAILRELAY_VERSION}-src.tar.gz
  URL_HASH MD5=${EMAILRELAY_HASH}
