ES_HOME='/opt/api-umbrella/embedded/elasticsearch'
ES_CLASSPATH=$ES_CLASSPATH:$ES_HOME/lib/*:$ES_HOME/lib/sigar/*
ES_HEAP_SIZE={{elasticsearch.embedded_server_env.heap_size}}

ES_JAVA_OPTS="
  -server
  -Djava.net.preferIPv4Stack=true
  -Des.config={{etc_dir}}/elasticsearch/elasticsearch.yml
  -Xms{{elasticsearch.embedded_server_env.heap_size}}
  -Xmx{{elasticsearch.embedded_server_env.heap_size}}
  -Xss256k
  -XX:+UseParNewGC
  -XX:+UseConcMarkSweepGC
  -XX:CMSInitiatingOccupancyFraction=75
  -XX:+UseCMSInitiatingOccupancyOnly
  -XX:+HeapDumpOnOutOfMemoryError"
