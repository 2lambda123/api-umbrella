server:
  port: {{unbound.port}}

  num-threads: 2

  logfile: {{log_dir}}/unbound.log
  log-time-ascii: yes
  verbosity: 2
  extended-statistics: yes

  do-daemonize: no
  username: ""
  pidfile: {{run_dir}}/unbound.pid

  {{#if user}}
  chroot: {{etc_dir}}/unbound
  {{/if}}

  interface: 127.0.0.1

  prefetch: yes
  prefetch-key: yes


forward-zone:
  name "."
  forward-addr: 8.8.8.8
