#!/bin/sh

# Redirect stderr to stdout
exec 2>&1

if test ${1} = "start"; then
  echo "starting ${2}..."
  exec \
    runenv rc.env \
    varnishd \
      -F \
      -a {{varnish.host}}:{{varnish.port}} \
      -f {{etc_dir}}/varnish.vcl \
      -t 0 \
      -n {{run_dir}}/varnish/api-umbrella \
      -p http_gzip_support=off
fi

exit 0
