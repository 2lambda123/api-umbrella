#!/bin/sh

# Redirect stderr to stdout
exec 2>&1

if test ${1} = "start"; then
  echo "starting ${2}..."

  RUN_OPTS=""
  {{#user}}
  RUN_OPTS="$RUN_OPTS -u {{user}}"
  {{/user}}

  exec runtool $RUN_OPTS {{_embedded_root_dir}}/presto/bin/launcher run \
    --node-config={{etc_dir}}/presto/node.properties \
    --jvm-config={{etc_dir}}/presto/jvm.config \
    --config={{etc_dir}}/presto/config.properties
fi

exit 0
