#!/bin/sh

# Redirect stderr to stdout
exec 2>&1

if test ${1} = "start"; then
  echo "starting ${2}..."
  exec runtool -e rc.env -c {{_src_root_dir}}/src/api-umbrella/web-app bundle exec puma -q --dir {{_src_root_dir}}/src/api-umbrella/web-app --prune-bundler -e {{app_env}} -w {{web.puma.workers}} -t {{web.puma.min_threads}}:{{web.puma.max_threads}} -b unix://{{run_dir}}/web-puma.sock
fi

exit 0
