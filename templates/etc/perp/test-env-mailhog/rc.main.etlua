#!/usr/bin/env bash
set -e -u

# Redirect stderr to stdout
exec 2>&1

umask "<%- config['umask'] %>"

if [ "${1}" = "start" ]; then
  echo "starting ${2}..."
  api_umbrella_user="<%- config['user'] %>"

  PATH="<%- config['_test_env_install_dir'] %>/sbin:<%- config['_test_env_install_dir'] %>/bin:$PATH"
  run_args=("-e" "rc.env")
  if [ -n "$api_umbrella_user" ]; then
    run_args+=("-u" "$api_umbrella_user")
  fi

  exec runtool ${run_args[@]+"${run_args[@]}"} mailhog \
    -smtp-bind-addr "<%- config['mailhog']['bind_addr'] %>:<%- config['mailhog']['smtp_port'] %>" \
    -api-bind-addr "<%- config['mailhog']['bind_addr'] %>:<%- config['mailhog']['api_port'] %>" \
    -ui-bind-addr "<%- config['mailhog']['bind_addr'] %>:<%- config['mailhog']['ui_port'] %>"
fi

exit 0
