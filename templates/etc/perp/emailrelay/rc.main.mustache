#!/usr/bin/env bash

# Redirect stderr to stdout
exec 2>&1

if [ "${1}" = "start" ]; then
  echo "starting ${2}..."
  api_umbrella_user="{{user}}"

  run_args=()
  if [ -n "$api_umbrella_user" ]; then
    run_args+=("-u" "$api_umbrella_user")
  fi

  exec \
    runtool "${run_args[@]}" \
    emailrelay \
      --port="{{emailrelay.port}}" \
      --spool-dir="{{db_dir}}/emailrelay" \
      --no-daemon \
      --log \
      --no-syslog \
      --poll=1 \
      --forward-to="127.0.0.1:1025" \
      --client-tls \
      --verbose
fi

exit 0
