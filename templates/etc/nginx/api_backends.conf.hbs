{{#each apis}}
  # {{name}}
  upstream api_umbrella_{{_id}}_backend {
    {{#unless defaultBalance}}
      {{balance_algorithm}};
    {{/unless}}

    {{#each servers}}
      server {{ip}}:{{port}}; # {{host}}
      {{#if isIp}}
        # server {{host}}:{{port}};
      {{else}}
        # jdomain {{host}} port={{port}} retry_off;
      {{/if}}
    {{/each}}

    {{#if keepalive_connections}}
      keepalive {{keepalive_connections}};
    {{/if}}
  }
{{/each}}
