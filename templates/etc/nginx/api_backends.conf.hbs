{{#each apis}}
  # {{name}}
  upstream api_umbrella_{{_id}}_backend {
    {{#unless defaultBalance}}
      {{balance_algorithm}};
    {{/unless}}

    {{#if keepalive_connections}}
      keepalive {{keepalive_connections}};
    {{/if}}

    {{#each servers}}
      {{#if is_ip}}
        server {{nginx_host}}:{{port}};
      {{else}}
        dynamic_server {{nginx_host}}:{{port}};
      {{/if}}
    {{/each}}
  }
{{/each}}
