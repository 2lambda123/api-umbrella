source "https://rubygems.org"

group :development do
  gem "middleman", "~> 3.3.7"

  # Live-reloading plugin
  gem "middleman-livereload", "~> 3.3.4"

  # For faster file watcher updates on Windows:
  gem "wdm", "~> 0.1.0", :platforms => [:mswin, :mingw]

  # Deploy to GitHub Pages
  # Fork allows customizing the PROJECT_ROOT:
  # https://github.com/edgecase/middleman-gh-pages/pull/23
  gem "middleman-gh-pages", "~> 0.0.3", :git => "https://github.com/elthariel/middleman-gh-pages.git"

  # Markdown
  gem "kramdown", "~> 1.5.0"

  # Deployment
  gem "capistrano", "~> 3.3.5"
  gem "capistrano-npm", "~> 1.0.1"
  gem "dotenv", "~> 1.0.2"
end
