<h1>Publish Configuration Changes</h1>

{{#if hasChanges}}
  <form>
    {{#if model.apis.new}}
      <fieldset>
        <legend>{{model.apis.new.length}} New API Backends</legend>
        {{render "config/publish_api" model.apis.new}}
      </fieldset>
    {{/if}}

    {{#if model.apis.modified}}
      <fieldset>
        <legend>{{model.apis.modified.length}} Modified API Backends</legend>
        {{render "config/publish_api" model.apis.modified}}
      </fieldset>
    {{/if}}

    {{#if model.apis.deleted}}
      <fieldset>
        <legend>{{model.apis.deleted.length}} Deleted API Backends</legend>
        {{render "config/publish_api" model.apis.deleted}}
      </fieldset>
    {{/if}}

    <div class="text-center">
      <button type="submit" {{action 'publish' target='view'}} class="btn btn-large btn-primary" data-loading-text="<i class='fa fa-refresh fa-spin'></i> Publishing...">Publish</button>
    </div>
  </form>
{{else}}
  <div class="row-fluid">
    <div class="span4 offset4">
      <div class="alert alert-success">
        The published configuration is already up to date.<br>
        No need to publish.
      </div>
    </div>
  </div>
{{/if}}
