{{#formFor model}}
  <div class="modal-body">
    {{input matcher as='select'
      value='matcher'
      collection='matcherOptions'
      optionValuePath='content.id'
      optionLabelPath='content.name'}}
    {{input httpMethod as='select'
      value='httpMethod'
      collection='httpMethodOptions'
      optionValuePath='content.id'
      optionLabelPath='content.name'}}
    {{input from}}
    {{input to}}

    http://api.data.gov{{from}} -> http://developer.nrel.gov{{to}}
  </div>
  <div class="modal-footer">
    <button class="btn" {{action cancel}}>Cancel</button>
    <button class="btn btn-primary" {{action ok}}>OK</button>
  </div>
{{/formFor}}
