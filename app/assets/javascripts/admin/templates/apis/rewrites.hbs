{{#if model}}
  <table id="rewrites" class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Matching Type</th>
        <th>From</th>
        <th>To</th>
        <th></th>
        <th class="reorder-handle"></th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr data-id="{{unbound _id}}">
          <td>{{matcher}}</td>
          <td>{{http_method}} {{from}}</td>
          <td>{{to}}</td>
          <td class="table-row-actions">
            <a href="#" {{action 'editRewrite' this}}><i class="icon-pencil"></i>Edit</a>
            <a href="#" class="remove-action" {{action 'deleteRewrite' this}}><i class="icon-remove"></i>Remove</a>
          </td>
          <td class="reorder-handle"><i class="icon-reorder"></i></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
<div class="row-fluid">
  <div class="span6">
    <button type="button" class="btn btn-mini" {{action 'addRewrite'}}><i class="icon-plus-sign"></i> Add Rewrite</button>
  </div>
  <div class="span6 text-right">
    {{#if reorderable}}
      <button type="button" id="rewrites_reorder" class="btn btn-mini" {{action 'reorderRewrites'}}><i class="icon-reorder"></i> <span class="reorder-button-text">Reorder</span></button>
    {{/if}}
  </div>
</div>
