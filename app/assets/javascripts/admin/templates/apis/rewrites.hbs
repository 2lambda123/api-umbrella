<table id="rewrites" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th style="width: 110px;">Matching Type</th>
      <th style="width: 110px;">HTTP Method</th>
      <th>From</th>
      <th>To</th>
      <th></th>
      <th class="reorder-handle"></th>
    </tr>
  </thead>
  <tbody>
    {{#if model}}
      {{#each}}
        <tr data-id="{{unbound id}}">
          <td>{{matcherType}}</td>
          <td>{{httpMethod}}</td>
          <td>{{frontendMatcher}}</td>
          <td>{{backendReplacement}}</td>
          <td class="table-row-actions">
            <a href="#" {{action 'editRewrite' this}}><i class="fa fa-pencil"></i>Edit</a>
            <a href="#" class="remove-action" {{action 'deleteRewrite' this}}><i class="fa fa-times"></i>Remove</a>
          </td>
          <td class="reorder-handle"><i class="fa fa-reorder"></i></td>
        </tr>
      {{/each}}
    {{else}}
      <tr class="empty"><td colspan="6">No request rewrites have been added yet. Click "Add Rewrite" below to get started.</td></tr>
    {{/if}}
  </tbody>
</table>
<div class="row-fluid">
  <div class="span6">
    <button type="button" class="btn btn-mini" {{action 'addRewrite'}}><i class="fa fa-plus-circle"></i> Add Rewrite</button>
  </div>
  <div class="span6 text-right">
    {{#if reorderable}}
      <button type="button" id="rewrites_reorder" class="btn btn-mini" {{action 'reorderRewrites'}}><i class="fa fa-reorder"></i> <span class="reorder-button-text">Reorder</span></button>
    {{/if}}
  </div>
</div>
