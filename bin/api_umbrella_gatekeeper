#!/usr/bin/env ruby

require "trollop"
require "api-umbrella-gatekeeper/server"

options = Trollop::options do
  opt :host, "Hostname to bind",
    :short => "h",
    :default => "0.0.0.0"
  opt :port, "Port to listen on",
    :short => "p",
    :default => 7890
end

ApiUmbrella::Gatekeeper::Server.run(options)
