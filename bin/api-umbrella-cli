#!/usr/bin/env luajit

local app_root = os.getenv("API_UMBRELLA_APP_ROOT")
if app_root then
  package.path = app_root .. "/lib/?.lua;" ..
    app_root .. "/vendor/share/lua/5.1/?.lua;" ..
    app_root .. "/vendor/share/lua/5.1/?/init.lua;" ..
    package.path
  package.cpath = app_root .. "/vendor/lib/lua/5.1/?.so;" ..
    package.cpath
end

local cli = require "api-umbrella.cli"

local command = arg[1]
if cli[command] then
  cli[command]()
else
  print("Unknown command: " .. tostring(command) .. "\n\n")
  cli.help()
end
